<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ScrollView01"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:fillViewport="true">
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.mansoft_charles.shoolmanportal.com.benson.mansoft_charles.shoolmanportal.MainActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_66sdp"
        android:background="#00c853"
        android:minHeight="?android:attr/actionBarSize"
        app:layout_constraintBottom_toTopOf="@+id/card_factory"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <EditText
            android:id="@+id/user_name"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="Name" />

       <ImageView
            android:id="@+id/imageViewToolBar"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/schoolman" />



    </android.support.v7.widget.Toolbar>


            <android.support.v7.widget.CardView
                android:id="@+id/card_factory"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_12sdp"
                android:layout_marginTop="90dp"
                android:layout_marginRight="@dimen/_12sdp"
                app:cardCornerRadius="@dimen/_12sdp"
                app:layout_constraintBottom_toTopOf="@+id/card_maps"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <Button
                    android:id="@+id/fees"
                    android:layout_width="163dp"
                    android:layout_height="126dp"
                    android:background="@color/colorWhite"
                    android:drawableTop="@drawable/fees"
                    android:padding="@dimen/_10sdp"
                    android:textAllCaps="false"
                    android:text="School Fees" />

                <Button
                    android:id="@+id/reports"
                    android:layout_width="163dp"
                    android:layout_height="126dp"
                    android:layout_marginLeft="@dimen/_150sdp"
                    android:background="@color/colorWhite"
                    android:drawableTop="@drawable/reports"
                    android:padding="@dimen/_10sdp"
                    android:textAllCaps="false"
                    android:text="Report Forms" />


            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/card_maps"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="@dimen/_12sdp"
                android:layout_marginRight="@dimen/_12sdp"
                app:cardCornerRadius="@dimen/_12sdp"
                app:layout_constraintBottom_toTopOf="@+id/card_sensors"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/card_factory">

                <Button
                    android:id="@+id/subjects"
                    android:layout_width="163dp"
                    android:layout_height="126dp"
                    android:background="@color/colorWhite"
                    android:drawableTop="@drawable/subjectteachers"
                    android:padding="@dimen/_10sdp"
                    android:textAllCaps="false"
                    android:text="Subject Details" />

                <Button
                    android:id="@+id/assignments"
                    android:layout_width="163dp"
                    android:layout_height="126dp"
                    android:layout_marginLeft="@dimen/_150sdp"
                    android:background="@color/colorWhite"
                    android:drawableTop="@drawable/assignments"
                    android:padding="@dimen/_10sdp"
                    android:text="Study Online"
                    android:textAllCaps="false" />
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/card_sensors"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_12sdp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="@dimen/_12sdp"
                android:layout_marginBottom="10dp"
                app:cardCornerRadius="@dimen/_12sdp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toTopOf="@+id/card_level4"
                app:layout_constraintTop_toBottomOf="@+id/card_maps">

                <Button
                    android:id="@+id/awards"
                    android:layout_width="163dp"
                    android:layout_height="126dp"
                    android:background="@color/colorWhite"
                    android:drawableTop="@drawable/awards"
                    android:padding="@dimen/_10sdp"
                    android:textAllCaps="false"
                    android:text="Student Awards" />

                <Button
                    android:id="@+id/discipline"
                    android:layout_width="163dp"
                    android:layout_height="126dp"
                    android:layout_marginLeft="@dimen/_150sdp"
                    android:background="@color/colorWhite"
                    android:drawableTop="@drawable/discipline"
                    android:padding="@dimen/_10sdp"
                    android:textAllCaps="false"
                    android:text="Discipline Records" />
            </android.support.v7.widget.CardView>


            <android.support.v7.widget.CardView
                android:id="@+id/card_level4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_12sdp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="@dimen/_12sdp"
                android:layout_marginBottom="40dp"
                app:cardCornerRadius="@dimen/_12sdp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/card_sensors">

                <Button
                    android:id="@+id/alerts"
                    android:layout_width="163dp"
                    android:layout_height="126dp"
                    android:background="@color/colorWhite"
                    android:drawableTop="@drawable/alerts"
                    android:padding="@dimen/_10sdp"
                    android:textAllCaps="false"
                    android:text="Alert Notices" />

                <Button
                    android:id="@+id/pastpapers"
                    android:layout_width="163dp"
                    android:layout_height="126dp"
                    android:layout_marginLeft="@dimen/_150sdp"
                    android:background="@color/colorWhite"
                    android:drawableTop="@drawable/pastpapers"
                    android:padding="@dimen/_10sdp"
                    android:textAllCaps="false"
                    android:text="Past Papers" />
            </android.support.v7.widget.CardView>

           <!-- <android.support.v7.widget.CardView
                android:id="@+id/card_level5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
