<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools">
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_66sdp"
        android:background="#00c853"
        android:minHeight="?android:attr/actionBarSize"
        app:layout_constraintBottom_toTopOf="@+id/toolBarLabel"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">
            <EditText
                android:id="@+id/selectedExam"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:ems="10"
                android:inputType="textPersonName"
                android:text="Selected Exam"
                android:textAlignment="center"/>
    </android.support.v7.widget.Toolbar>
    <android.support.v7.widget.CardView
        android:id="@+id/card_factory"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_12sdp"
        android:layout_marginTop="100dp"
        android:layout_marginRight="@dimen/_12sdp"
        app:cardCornerRadius="@dimen/_12sdp"
        app:layout_constraintBottom_toTopOf="@+id/card_maps"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <EditText
            android:id="@+id/timeInMinutesLabel"
            android:layout_width="match_parent"
            android:layout_height="126dp"
            android:padding="@dimen/_10sdp"
            android:background="@color/colorWhite"
            android:text="Time In Minutes"
            android:textSize="@dimen/_16ssp"
            android:textAlignment="center"/>
</android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/card_maps"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:layout_marginBottom="1dp"
        android:layout_marginLeft="@dimen/_12sdp"
        android:layout_marginRight="@dimen/_12sdp"
        app:cardCornerRadius="@dimen/_12sdp"
        app:layout_constraintBottom_toTopOf="@+id/card_sensors"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/card_factory">

        <EditText
            android:id="@+id/timeInMinutes"
            android:layout_width="match_parent"
            android:layout_height="126dp"
            android:padding="@dimen/_10sdp"
            android:background="@color/colorWhite"
            android:textAlignment="center"
            android:textSize="@dimen/_18ssp"
            android:textStyle="bold"
            android:text="160 Minutes"/>
 </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/card_sensors"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_12sdp"
        android:layout_marginTop="1dp"
        android:layout_marginRight="@dimen/_12sdp"
        android:layout_marginBottom="1dp"
        app:cardCornerRadius="@dimen/_12sdp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/card_level4"
        app:layout_constraintTop_toBottomOf="@+id/card_maps">

        <Button
            android:id="@+id/beginExam"
            android:layout_width="match_parent"
            android:layout_height="126dp"
            android:background="@color/colorWhite"
            android:drawableTop="@android:drawable/ic_media_play"
            android:padding="@dimen/_10sdp"
            android:text="Begin"
            android:textStyle="bold"
            android:textSize="@dimen/_24ssp"
            android:textAlignment="center"
            android:textColor="@color/colorPrimary"/>


    </android.support.v7.widget.CardView>




</android.support.constraint.ConstraintLayout>